<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>

  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<div class="container">
    <div class="row">
        <%= form_for(Message.new, html: {class: "form-horizontal"}) do |f| %>
            <div class="form-group">
                <label for="inputName" class="col-md-2 control-label">名前:</label>
                <div class="col-md-10">
                    <%= f.text_field :name , class: "form-control" , id: "inputName" %>
                </div>
            </div>
            <div class="form-group">
                <label for="inputBody" class="col-md-2 control-label">内容:</label>
                <div class="col-md-10">
                    <%= f.text_area :body , class: "form-control" , id: "inputBody" %>
                </div>
            </div>
        <%= f.submit class: "btn btn-sm btn-primary" %>
        <% end %>
    </div>
</div>
