<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            メッセージ一覧
        </div>

        <div class="panel-body">
            <% @messages.each do |message| %>
                <span class="label label-info"><%= message.name %></span>
                <%= message.body %>
                <br>
            <% end %>
        </div>
    </div>
</div>

<div class="row">
    <%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
    <% if @message.errors.present? %>
        <div class="alert alert-danger">
            <%= alert %>
            <ul>
                <% @message.errors.full_messages.each do |full_message| %>
                    <li>
                        <%= full_message %>
                    </li>
                <% end %>
            </ul>
        </div>
    <% end %>
        <div class="form-group">
            <label for="inputName" class="col-sm-1 control-label">名前:</label>
            <div class="col-sm-11">
                <%= f.text_field :name , class: "form-control" , id: "inputName" %>
            </div>
        </div>
        <div class="form-group">
            <label for="inputBody" class="col-sm-1 control-label">内容:</label>
            <div class="col-sm-11">
                <%= f.text_area :body , class: "form-control" , id: "inputBody" %>
            </div>
        </div>
        <div class="col-sm-offset-1">
            <%= f.submit class: "btn btn-sm btn-primary" %>
        </div>
    <% end %>
</div>
