<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
    <% if @message.errors.present? %>
        <div class="alert alert-danger">
            <%= alert %>
            <ul>
                <% @message.errors.full_messages.each do |full_message| %>
                    <li>
                        <%= full_message %>
                    </li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="form-group">
        <label for="inputName" class="col-sm-1 control-label">名前:</label>
        <div class="col-sm-4">
            <%= f.text_field :name , class: "form-control" , id: "inputName" %>
        </div>
        <label for="inputAge" class="col-sm-1 control-label">年齢:</label>
        <div class="col-sm-2">
            <%= f.text_field :age , class: "form-control" , id: "inputAge" %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputBody" class="col-sm-1 control-label">内容:</label>
        <div class="col-sm-11">
            <%= f.text_area :body , class: "form-control" , id: "inputBody" %>
        </div>
    </div>
    <div class="col-sm-offset-1">
        <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
<% end %>
